# Default Keys {{{

super + alt + Escape
	bspc quit

super + w
	bspc window -c

super + t
	bspc desktop -l next

# Reset Desktop
super + b
	bspc desktop -B

super + {s,f}
	bspc window -t {floating,fullscreen}

super + {k,l}
	bspc {window,desktop} -f last

super + Tab
	bspc window -f next

super + apostrophe
	bspc window -s last

super + {o,i}
	bspc control --record-history off; \
	bspc window {older,newer} -f; \
	bspc control --record-history on

super + m
	bspc window -s biggest

super + {comma,period}
	bspc desktop -C {backward,forward}

super + alt + {Left,Down,Up,Right}
	 bspc window -p {left,down,up,right}

super + ctrl + {1-9}
	bspc window -r 0.{1-9}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} focused:^{1-9,10}

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

# }}}
# {{{ My Keys

super + {minus,equal}
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 5 ))

super + alt + {1-9}
	bspc config split_ratio 0.{1-9}0

super + alt + BackSpace
	bspc config split_ratio 0.50

# Presel window for splitting
super + {Left,Down,Up,Right}
	bspc window -p {left,down,up,right}

super + ctrl + {Left,Down,Up,Right}
	bspc window -e {left -10,down +10,up -10,right +10}

super + ctrl + shift + {Left,Down,Up,Right}
	bspc window -e {right -10,up +10,down -10,left +10}

# }}}
# Media Keys {{{

XF86AudioRaiseVolume
	amixer -D pulse sset Master 5%+ unmute

XF86AudioLowerVolume
	amixer -D pulse sset Master 5%- unmute

XF86AudioMute
	amixer -D pulse sset Master toggle

XF86MonBrightnessDown
	xbacklight -dec 25

XF86MonBrightnessUp
	xbacklight -inc 25

XF86AudioPrev
	mpc prev

XF86AudioNext
	mpc next

XF86AudioPlay
	mpc toggle

# }}}
# Applications {{{
super + Return
	termite

super + b
	firefox-developer

super + grave
	rofi -show run

super + Escape
	pkill -USR1 -x sxhkd

super + shift + f
	chatr

# }}}

# vim: set ft=sxhkdrc:
