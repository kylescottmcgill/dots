# {{{ My Keys

# move
super + {h,j,k,l}
 wmv {-20 0,0 +20, 0 -20, +20 0} $(pfw)

# resize
super + shift + {h,j,k,l}
 wrs {-20 0,0 +20, 0 -20, +20 0} $(pfw)

# close window
super + w
 killw $(pfw)

# make fullscreen
super + f
 fullscreen.sh $(pfw)

# put window back/forward
super + s
 chwso -i $(pfw)

# cycle through windows
super + {Tab, shift + Tab}
 focus.sh {next,prev} 2>/dev/null

# put windows to the corners
super + {y,u,b,n,g}
 corner.sh {tl,tr,bl,br,md}

super + !button{1,3}
 {wmv, wrs} -a %i %i $(pfw)

# tile windows
super + t
 tile.sh

# }}}
# Media Keys {{{

XF86AudioRaiseVolume
 amixer -D pulse sset Master 5%+ unmute

XF86AudioLowerVolume
 amixer -D pulse sset Master 5%- unmute

XF86AudioMute
 amixer -D pulse sset Master toggle

XF86MonBrightnessDown
 xbacklight -dec 25

XF86MonBrightnessUp
 xbacklight -inc 25

XF86AudioPrev
 mpc prev

XF86AudioNext
 mpc next

XF86AudioPlay
 mpc toggle

# }}}
# Applications {{{

super + Return
 termite

super + shift + Return
 termite -c ~/.config/termite/config-alternative

super + shift + b
 firefox-developer

super + grave
 rofi -show run

super + Escape
 pkill -USR1 -x sxhkd

super + shift + x
 chatr

# }}}

# vim: set ft=sxhkdrc:
