#!/bin/bash

function DesktopSetup {
    i=1
    for monitor in $(bspc query -M); do
	bspc monitor $monitor -n "$i" -d {I,II,III,IV,V,VI,VII,VIII,IX}
	let i++
    done
    NMON=$i
    unset i
}

case "$(hostname)" in
    "ouroboros") 
        bspc desktop -n 1
        bspc monitor -d 1 2 3 4 5 6 7 8 9
        ;;
    "turtil") 
	DesktopSetup 
        ;;
    "xm-dev") 
	DesktopSetup
	;;
    *) 
        bspc desktop -n 1
        bspc monitor -d 1 2 3 4 5 6 7 8 9
        ;;
esac

bspc config border_width 1
bspc config window_gap 30

bspc config top_padding 10
bspc config bottom_padding 10
bspc config right_padding 10
bspc config left_padding 10

# Visual options
bspc config split_ratio 0.50
bspc config borderless_monocle true
bspc config gapless_monocle true
bspc config focus_follows_pointer true
bspc config pointer_follows_focus false
bspc config pointer_follows_monitor true
bspc config auto_alternate true
bspc config auto_cancel true
bspc config focus_follows_focus false
bspc config history_aware_focus false
bspc config apply_floating_atom true
bspc config ignore_ewmh_focus true
bspc config normal_border_color "#332d29"
bspc config active_border_color "#23466E"
bspc config focused_border_color "#23466E"
bspc config presel_border_color "#7394BB"
bspc config urgent_border_color "#9f7155"
bspc config focused_locked_border_color "#9a875f"
bspc config normal_locked_border_color "#708D8F"
bspc config active_locked_border_color "#808C8D"
bspc config normal_frame_opacity 0.0
bspc config focused_frame_opacity 0.1
bspc config remove_unplugged_monitors true

# Rules
bspc rule -a Skype pseudo_tiled=off
bspc rule -a URxvt pseudo_tiled=off border=on
bspc rule -a Chromium border=off
bspc rule -a Firefox border=off fullscreen=off
bspc rule -a Steam floating=off
bspc rule -a Gvim border=off
bspc rule -a feh floating=on manage=on
bspc rule -a mpv floating=on follow=on

export BSPWM_SOCKET="/tmp/bspwm-socket"
export PANEL_FIFO="/tmp/panel-fifo"

# ~/.bin/statsbar | bar -g 1770x26+10+10 -pd -f '-lucy-tewi-*-*-*-*-12-*-*-*-*-*-*-*'  &
# ~/.bin/statsbar | bar -g 1770x26+1960+10 -pd &
