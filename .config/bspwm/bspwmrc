# ~/.bin/statsbar | bar -g 1770x26+10+10 -pd -f '-lucy-tewi-*-*-*-*-12-*-*-*-*-*-*-*'  &
# ~/.bin/statsbar | bar -g 1770x26+1960+10 -pd &
