###
# Kyle specific options
###
#color status green default

set from      = "email@kylescottmcgill.com"
set sendmail  = "/usr/bin/msmtp -a Kyle"
set mbox      = "+Kyle/archive"
unset record
set record = "+Kyle/INBOX.Sent"
set postponed = "+Kyle/INBOX.Drafts"
#unset trash
#set trash = "+Kyle/INBOX.Trash"

macro index E \
    "<change-folder>+Kyle/INBOX.Completed<enter><limit>~B " \
    "search everything"

macro index D \
    "<save-message>+Kyle/INBOX.Trash<enter>" \
    "move message to the trash"

macro index A \
    "<save-message>+Kyle/INBOX.Completed<enter>" \
    "move message to completed"

macro index S \
    "<save-message>+Kyle/INBOX.spam<enter>"  \
        "mark message as spam"
