# Colors you can use:
#
# white   -   brightwhite
# yellow  -  brightyellow
# red     -     brightred
# magenta - brightmagenta
# blue    -    brightblue
# green   -   brightgreen

color normal		color255 default
color attachment	brightblue default
color bold			brightblue default
color underline		brightblue default
color error			color255 default
color indicator		blue default
color message		brightwhite default
color status		default brightblue
color quoted		brightcyan default
color quoted1		cyan default
color quoted2		brightblue default
color quoted3		blue default
color quoted4		brightblue default
color quoted5		brightblue default
color signature		brightblue default
color tilde			brightblue default
color tree			brightblue default
color hdrdefault	brightblue brightblue

color header		brightcyan default "^date: *"
color header		cyan default "^from: *"
color header		brightblue default "^subject: *"
color header		blue default "^to: *"
color header		brightblue default "^delivered-to: *"
color header		brightblue default "^cc: *"
color header		brightblue default "^bcc: *"
color header		cyan default "^reply-to: *"
color header		cyan default "^mail-followup-to: *"
color header		cyan default "^old-return-path: *"
color header		brightblue default "^x-mailer: *"
color header		brightblue default "^user-agent: *"
color header		brightblue default "^x-operating-system: *"
color header		cyan default "^x-mailing-list: *"
color header		brightblue default "^in-reply-to: *"

color index			brightblue default "~O" # Unread
color index			cyan default "~N" # New
color index			brightcyan default "~g" # gpg signed
color index			white default "~G" # gpg encrypted
color index			brightwhite default "~F" # Flagged
color index			brightwhite default "~T" # Tagged
color index			brightwhite default "~f MAILER-DAEMON@*"
color index			brightwhite default "~f Mailer-Daemon@*"
color index			brightblue default "~D" # Deleted

color body			brightblue default "(http|https|ftp|news|telnet|finger)://[^ \">\t\r\n]*"
color body			brightblue default "mailto:[-a-z_0-9.]+@[-a-z_0-9.]+"
color body			brightblue default "news:[^ \">\t\r\n]*"
color body			default brightblue "[^ <]*:\/\/[^ >]*" # for URLs
color body			brightblue default "[A-Za-z0-9_\.\-]+@[A-Za-z0-9_\.\-]*[A-Za-z0-9_\.\-]+"

