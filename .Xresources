Xcursor.size: 16

! XFT Settings {{{
!Xft.antialias:  1
!Xft.autohint:   0
!Xft.dpi:        96
!Xft.hinting:    1
!Xft.hintstyle:  hintfull
!Xft.lcdfilter:  lcddefault
!Xft.rgba:       rgb
! }}}
! URxvt {{{
!URxvt*skipBuiltinGlyphs: false
URxvt*geometry: 115x25
!URxvt*dpi: 96
!URxvt*antialias: true
!URxvt*rgba: rgb
!URxvt*hinting: true
URxvt*hintstyle: hintfull
!URxvt*depth: 32
URxvt*font: xft:Operator Mono:pixelsize=10
URxvt*boldFont: xft:Operator Mono:pixelsize=10
URxvt*italicFont: xft:Operator Mono:pixelsize=10
URxvt*boldItalicFont: xft:Operator Mono:pixelsize=10
URxvt*lineSpace: 3
URxvt*letterSpace: -1
URxvt*internalBorder: 15
URxvt*pointerBlank: true
URxvt*cursor: i-beam
URxvt*cursorBlink: true
URxvt*cursorUnderline: true
URxvt*saveLines: 65358
URxvt*url-launcher: /usr/bin/chromium
URxvt*perl-lib: /usr/lib/urxvt/perl/
URxvt*perl-ext-common: default,matcher
URxvt*matcher.button: 1
URxvt*cutchars: "\\ `\"\'()*;<>[]{|}&,=?@^\:"
URxvt*iso14755: false
URxvt*iso14755_52: false
URxvt*meta8: false
URxvt*scrollBar: false
URxvt*keysym.Control-Up: \033[1;5A
URxvt*keysym.Control-Down: \033[1;5B
URxvt*keysym.Control-Left: \033[1;5D
URxvt*keysym.Control-Right: \033[1;5C
URxvt*keysym.M-c: perl:clipboard:copy
URxvt*keysym.M-v: perl:clipboard:paste
! }}}
! Misc Applications {{{
rofi.color-enabled: true
rofi.color-normal: #ffffff,#525d76,#f5f5f5,#df3f3f,#ffffff
rofi.color-urgent: #ffffff,#dc322f,#f5f5f5,#df3f3f,#dc322f
rofi.color-active: #ffffff,#c2cad0,#f5f5f5,#df3f3f,#c2cad0
rofi.color-window: #ffffff,#f5f5f5
rofi.separator-style: solid
rofi.font: Operator Mono Light 11
rofi.padding: 5
rofi.lines: 5
rofi.borderwidth: 0
! }}}
