#!/bin/bash

for i in $(xrandr -q | grep -v "VIRTUAL1" | grep -w "disconnected" | awk '{print $1}')
do
	xrandr --output $i --off
done

for i in $(xrandr -q | grep -v "VIRTUAL1" | grep -w "connected" | awk '{print $1}')
do
	if [[ "$i" != "eDP1" ]]; then
		ALIGNMENT="--primary --right-of eDP1"
	fi
	xrandr --output $i --mode $(xrandr --query | grep -a1 -w $i | tail -n 1 | awk '{print $1}') $ALIGNMENT
done

~/.fehbg &
compton -CGb &

# vim: ft=sh ts=4 sw=4 tw=0 fdm=marker foldlevel=0 :
